					<li> 
						<form action="/users/logOut" method="POST">
							<button class="logout" type="'submit">
									Cerrar Sesión  <i class="fas fa-user"></i>
							</button>

						</form>
					</li>
					
				</ul>
			</nav>
		</div>
	</header>
