<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head', {title: title}) %>

<body>
	<!-- Header -->
	<% if(locals.user != undefined) {%>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	

	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/home-banner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ultimos productos</h2>
				<p>Ordenados del mas reciente al menos reciente</p>
			</div>


			<!-- Show the "ultimos" products -->
			
				<% for(let i = 0 ; i < productos.length ; i++) { %>
			
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<figure class="product-box_image">
							
								<img src="<%= productos[i].nombre_imagen %>" alt="<%= productos[i].nombre_producto %>">
						
							
						</figure>
						<article class="product-box_data">
							<h2>
								<a href="producto/productos/<%= productos[i].id_producto %>">
								<%= productos[i].nombre_producto %>
								</a>
							</h2>
							<p> 
								<%= productos[i].descripcion_producto %> 
							</p>
							<h5> 
								<a href="users/profile/<%= productos[i].user_id %>">
								<%= productos[i].usuario.usuario %>
								</a> 
							</h5>
						</article>
					</a>
				</section> 
			</div>
			<% } %>
		</div>
	</div>
	
	

	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->

			
			
			
	</div>
</div>
</section>

	<!-- /Más comentados -->


	<%- include('./partials/footer') %>
</body>	
</html>
