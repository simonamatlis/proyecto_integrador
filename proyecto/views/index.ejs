<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/Header') %>

	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let index = 0; index < 4; index++ ) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto">
							<figure class="product-box_image">
								<img src="<%= productos[index].imagen%>" >
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[index].nombre %></h2>
								<p><%= productos[index].description %></p>
								<p>Comentarios: <%= productos[index].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<% for( let index = 5; index < 10; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto">
							<figure class="product-box_image">
								<img src="<%= productos[index].imagen%>" >
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[index].nombre %></h2>
								<p><%= productos[index].description %></p>
								<p>Comentarios: <%= productos[index].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let index = 3; index < 7; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto">
							<figure class="product-box_image">
								<img src="<%= productos[index].imagen%>" >
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[index].nombre %></h2>
								<p><%= productos[index].description %></p>
								<p>Comentarios: <%= productos[index].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<%- include('./partials/footer') %>
</body>	
</html>