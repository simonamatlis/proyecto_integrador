<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head', {title: title}) %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> Productos </h2> 
			<p class="product-detail-description">
				<a href="/producto/agregar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src= <%= productos.nombre_imagen %> alt="" class="product-detail-img">
					<strong><p class="product-detail-description"><%= productos.descripcion_producto %></p></strong>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% if (productos.comentarios && productos.comentarios.length > 0) { %>
							<% for( let index = 0; index < productos.comentarios.length; index++ ) { %> 
								<article>
									<img src= <%= productos.comentarios[index].imagen %> alt=''> 
									<strong><%= productos.comentarios[index].nombreUsuario %> </strong> <br></br>
									<%= productos.comentarios[index].comentario %>
								</article>
						<% } %>
					<% } else { %> 
					   <p>No hay comentarios</p>
					<% } %>

					</section>

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>